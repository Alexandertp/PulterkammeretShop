@using PulterkammeretShop.Controllers
@{
    ViewData["Title"] = "SeBestillinger";
}
@model List<Ordre>
@if (HomeController.LoggedInUser == null)
{
    <h1> Please log in </h1>
    <form method="POST" asp-action="LoginUser">
        <input type="text" name="customerName"/>
        <input type="text" name="customerPassword"/>
        <button>Log In</button>
    </form>
}
else
{
    <div>
        @foreach (Ordre ordre in Model)
        {
            foreach (Spil spil in ordre.varer)
            {
                <span>ID: @spil.id</span><br/>
                <span>Navn: @spil.navn</span><br/>
                <span>Pris: @spil.pris'-</span><br/>
                <span>Kategori: @spil.kategori</span><br/>
                <hr/>
            }

            <br/>
        }
    </div>
}