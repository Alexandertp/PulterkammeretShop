@{
    ViewData["Title"] = "Checkout";
}
@model List<Spil>

<div class="text-center">
    @if (Model != null)
    {
        double totalPris = 0;
        @foreach (Spil spil in Model)
        {
            totalPris += spil.pris * spil.antal;
            
            <div>
                @spil.navn @spil.antal
                <hr/>
            </div>
        }
        <div>
            Fuld pris: @totalPris kr
        </div>
    }
</div>

